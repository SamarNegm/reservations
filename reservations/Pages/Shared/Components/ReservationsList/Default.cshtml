@using ReservationCore.Models
@model List<Reservations>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
 
            <th>Name</th>
            <th>Email</th>
            <th>Adults</th>
            <th>Childs</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Adults</td>
                    <td>@item.Childs</td>
                    <td><a class="btn btn-success" asp-page="EditReservation" asp-route-id="@item.Id">Edit</a></td>
                </tr>
    }
    </tbody>
</table>